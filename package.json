{
	"name": "Entertain",
	"displayName": "Entertain",
	"description": "Shows the number of selected lines in the status bar",
	"icon": "resources/entertain.png",
	"version": "0.0.5",
	"publisher": "Allent",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/AllentDan/entertain"
	},
	"bugs": {
		"url": "https://github.com/AllentDan/entertain/issues"
	},
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onCommand:entertain.bulkReplace"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "entertain.bulkReplace",
				"category": "Entertain",
				"title": "Replace all you want by selecting"
			},
			{
				"command": "entertain.generateTree",
				"category": "Entertain",
				"title": "Genrate a tree"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "entertain.generateTree",
					"category": "Entertain",
					"group": "navigation"
				}
			]
		},
		"configuration": {
        "type": "object",
        "title": "Bulk replacement setting for entertain",
        "properties": {
            "entertain.bulkReplace": {
                "type": "object",
                "default": {},
                "description": "Bulk replacement setting for entertain"
            },
            "entertain.generateTree": {
                "type": "object",
                "default": {"num_width":9999, "num_depth":9999},
                "description": "Setting number of width and depth of a tree"
            }
        }
    }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^17.0.10",
		"@types/vscode": "^1.32.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.4.3"
	}
}